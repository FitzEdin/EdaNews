<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_scrolling" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="uk.ac.kent.fe44.edanews.ScrollingActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="vertical"

        android:layout_margin="@dimen/text_margin">

        <TextView
            android:id="@+id/detail_title"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"

            android:text="@string/dummy_title"
            android:textSize="20sp"
            android:textColor="@color/colorTextPrimary"

            android:gravity="center_horizontal|center_vertical"

            android:transitionName="article_title" />

        <TextView
            android:id="@+id/detail_date"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="8dp"

            android:text="@string/dummy_date"
            android:textSize="12sp"
            android:textColor="@color/colorTextSecondary"


            android:gravity="center" />

        <TextView
            android:id="@+id/detail_contents"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"

            android:paddingLeft="16dp"
            android:paddingRight="16dp"

            android:text="@string/dummy_contents"
            android:textSize="18sp"
            android:textColor="@color/colorTextSecondary"

            android:gravity="left"/>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
